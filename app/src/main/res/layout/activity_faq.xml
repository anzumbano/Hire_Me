<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEDC8"

    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".Faq">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/que1"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:text="Are mechanical, civil and other core streams eligible for
software jobs?" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/btn1"
            android:layout_marginTop="85dp"
            android:padding="8dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/que2"
            android:layout_width="307dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn2"
            android:padding="8dp"
            android:text="Do internships matter in campus placements?" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="157dp"
            android:padding="8dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/que3"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn3"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:text="Do students with paid internships get higher offers in
placements?" />

        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="215dp"
            android:padding="8dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/que4"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="206dp"
            android:padding="8dp"
            android:text="How can I start the preparation, in my 3rd year of
engineering?" />

        <TextView
            android:id="@+id/Answer"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="71dp"
            android:padding="8dp"
            android:text="Answer" />


    </RelativeLayout>






</RelativeLayout>