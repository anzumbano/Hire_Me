<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailInfo"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_out1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/position"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:text="Position"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvposition"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/position"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_out2"
            android:layout_below="@id/lay_out1"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/cpi"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:text="CPI"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvcpi"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/cpi"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_out3"
            android:layout_below="@id/lay_out2"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/ctc"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:text="CTC"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvctc"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/ctc"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_out4"
            android:layout_below="@id/lay_out3"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/allowed"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:text="Allowed"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvallowed"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/allowed"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_out5"
            android:layout_below="@id/lay_out4"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/preferences"
                android:layout_width="129dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:text="Preferences"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvpreference"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/preferences"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_out6"
            android:layout_below="@id/lay_out5"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/deadline"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:text="Deadline"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvdeadline"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/deadline"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>